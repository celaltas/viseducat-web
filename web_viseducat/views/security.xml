<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="display_security" name="Security">
        <t t-call="website.layout">

            <div class="container security">
                <div class="form-group security" >
                    <div class="row">
                        
                            <h3>Change Password</h3>
                   
                    </div>
                    <form>
                        <div class="form-group col-xl-7 group-sec">
                            <label class="col-form-label">Password:</label>
                            <input type="password" name="old" class="form-control form-control-sm"></input>
                        </div>
                        <div class="form-group col-xl-7 group-sec">
                            <label class="col-form-label">New Password:</label>
                            <input type="password" name="new1" class="form-control form-control-sm"></input>
                        </div>
                        <div class="form-group col-xl-7 group-sec">
                            <label class="col-form-label">Verify New Password:</label>
                            <input type="password" name="new2" class="form-control form-control-sm"></input>
                        </div>
                        <div class="col-10">
                            <a class="change-pw-button" ><button type="submit"></button>Change Password</a>
                         </div>
                    </form>
                </div>
            </div>


        </t>
    </template>
    

</odoo>
